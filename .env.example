# ⚠️ SECURITY: Copy this file to .env and replace ALL [YOUR-*] placeholders
# NEVER commit .env file with real secrets!

# Database Configuration
# -------------------------------------------------------------------
# POSTGRES_URL: Used by Next.js app (src/lib/db.ts)
# DIRECT_URL: Used by drizzle-kit for migrations (drizzle.config.ts)
# -------------------------------------------------------------------

# App Connection (Pooler - Port 6543)
# Get from Supabase: Project Settings → Database → Connection Pooling → Transaction Mode
POSTGRES_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD-URL-ENCODED]@[REGION].pooler.supabase.com:6543/postgres"

# Migration Connection (Direct - Port 5432)
# Get from Supabase: Project Settings → Database → Connection String → Direct Connection
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD-URL-ENCODED]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Authentication - Better Auth
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET="[YOUR-32-CHAR-SECRET]"
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
# Redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="[YOUR-CLIENT-ID].apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="[YOUR-CLIENT-SECRET]"

# AI Integration via OpenRouter (Optional)
# Get from: https://openrouter.ai/settings/keys
OPENROUTER_API_KEY="[YOUR-OPENROUTER-API-KEY]"
OPENROUTER_MODEL="openai/gpt-4.1-mini"

# OpenAI (Optional - for vector search)
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"
OPENAI_API_KEY="[YOUR-OPENAI-API-KEY]"

# CopilotKit
# Get from: https://cloud.copilotkit.ai
NEXT_PUBLIC_COPILOTKIT_LICENSE_KEY="[YOUR-COPILOTKIT-KEY]"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# File storage (optional)
BLOB_READ_WRITE_TOKEN=

# Polar payment processing (optional)
# Get from: https://polar.sh/dashboard
POLAR_WEBHOOK_SECRET="[YOUR-POLAR-WEBHOOK-SECRET]"
POLAR_ACCESS_TOKEN="[YOUR-POLAR-ACCESS-TOKEN]"

# Mapbox
# Get from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN="[YOUR-MAPBOX-TOKEN]"
MAPBOX_SERVER_TOKEN="[YOUR-MAPBOX-SERVER-TOKEN]"

# Tavily Search API (optional)
# Get from: https://tavily.com
TAVILY_API_KEY="[YOUR-TAVILY-API-KEY]"

# Admin User ID (optional)
# Set to your user ID after first login
ADMIN_USER_ID="[YOUR-ADMIN-USER-ID]"

# Drizzle SSL Configuration (optional)
# Set to true in production/CI for secure SSL verification
# Leave unset for development (Windows compatibility)
DRIZZLE_USE_SECURE_SSL=false
